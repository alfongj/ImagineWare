-if current_user.admin? or current_user.instruc?
 %h6
 .content
  %p= link_to "Student's reward", student_rewards_path(@id)
  %p Student's current credit :#{User.find(@id).credit}
-if current_user.admin?
 %h6
 .content
  %p= link_to "Add credit to student", credit_student_path(@id), :method => :post
%h2 All Submissions
%table{:class => "table table-striped table-bordered table-condensed"}
 %thead
  %tr
   %th Course
   %th Grade
   %th Date Submitted
   %th Feedback
  %tbody
   - @student_submissions.each do |submission|
    %tr
     %td= link_to "#{Course.find(submission.course_id).title}",submission_path(submission)
     %td= submission.grade
     %td= submission.created_at
     %td= submission.feedback
