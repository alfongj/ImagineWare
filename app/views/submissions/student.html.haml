-#  This file is app/views/submissions/index.html.haml
%h2 All Submissions
%table{:class => "table table-striped table-bordered table-condensed"}
 %thead
  %tr
   %th Course
   %th Grade
   %th Date Submitted
   %th Feedback
  %tbody
   - @student_submissions.each do |submission|
    %tr
     %td= Course.find(submission.course_id).title
     %td= link_to "#{submission.grade}", submission_path(submission)
     %td= submission.created_at
     %td= link_to "leave feedback for #{Course.find(submission.course_id).title}", submission_path(submission)
