%h2 All Courses

%table#courses
  %thead
    %tr
      %th title
      %th tags
      %th date
      %th details
  %tbody
    - @courses.each do |course|
      %tr
        %td= course.title
        %td= course.tags
        %td= course.created_at
        %td= link_to "More about #{course.title}",course_path(course)
