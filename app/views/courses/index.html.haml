-#  This file is app/views/courses/index.html.haml
%h2 All Courses

%div#tag_cloud
  - tag_cloud Course.tag_counts, %{s m l} do |tag, css_class|
    = link_to tag.name, tag_path(tag.name), class: css_class
= @pasta
%center
  %table{:class =>"table table-striped table-bordered table-condensed" }

    %thead
      %tr
        %th Logo
        %th Course Title
        -#%th content
        
    %tbody
      - @courses.each do |course|
        -if course =~ /^(.*)python(.*)$/i
          %tr
            %td= link_to image_tag("python.png"), "#"
            %td= link_to "#course.title}", course_path(course)
        -else 
          %tr
            %td= link_to image_tag("rails.png"), "#"
            %td= link_to "#{course.title}", course_path(course)
          -#%td= "#{course.content}"
          
-# add to end of index.html.haml
-if not current_user.nil? and current_user.instruc
  = link_to 'Add new Course', new_course_path
