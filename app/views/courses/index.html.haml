-#  This file is app/views/courses/index.html.haml
%h2 All Courses

%div#tag_cloud
  - tag_cloud Course.tag_counts, %{s m l} do |tag, css_class|
    = link_to tag.name, tag_path(tag.name), class: css_class
= @pasta
%center
  %table{:class =>"table table-striped table-bordered table-condensed" }

    %thead
      %tr
        %th Logo
        %th Course Title
        -#%th content
        
    %tbody
      - @courses.each do |course|
        -if course.title.downcase.include? "python"
          %tr
            %td= link_to image_tag("python.gif"), "#"
            %td= link_to "#{course.title}", course_path(course)
        -elsif course.title.downcase.include? "android"
          %tr
            %td= link_to image_tag("android.png"), "#"
            %td= link_to "#{course.title}", course_path(course)
        -elsif course.title.downcase.include? "html5"
          %tr
            %td= link_to image_tag("html5.jpg"), "#"
            %td= link_to "#{course.title}", course_path(course)
        -elsif  course.title.downcase.include? "rails"
          %tr
            %td= link_to image_tag("rails.png"), "#"
            %td= link_to "#{course.title}", course_path(course)
          -#%td= "#{course.content}"
          
-# add to end of index.html.haml
-if not current_user.nil? and current_user.instruc
  = link_to 'Add new Course', new_course_path
