%h3 Details about #{@course.title}
%ul#details
  %li
    Title:
    = @course.title
  %li
    Created on:
    = @course.created_at.strftime("%B %d,%Y")

%h3 Content:
%p#description= @course.content

= link_to 'Edit info', edit_course_path(@course)
= button_to 'Delete', course_path(@course), :method => :delete, :confirm => 'Are you sure?'
= link_to 'Back to course list',courses_path 
