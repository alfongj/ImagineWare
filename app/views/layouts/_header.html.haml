%header.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container
      = link_to "ImagineWare", root_path, id: "logo"
      %nav
        %ul.nav.pull-right
          %li= link_to "Home", root_path

          - if signed_in? 
            -if current_user.instruc? 
              %li#fat-menu.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Tools
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to "Assignments to grade", assign_to_grade_path

              %li= link_to "Courses", courses_path
              %li= link_to "All Students", students_path
            -elsif current_user.admin?
              %li#fat-menu.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Tools
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to "Instructor requests", request_path

              %li= link_to "Courses", courses_path
              %li= link_to "All Students", students_path
              %li= link_to "All instructors", instructors_path
            -else
              %li= link_to "Help", help_path
              %li= link_to "Courses", courses_path
              %li= link_to "Grades", my_grades_path(current_user)
            %li#fat-menu.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Account
                %b.caret
              %ul.dropdown-menu
                %li= link_to "Profile", current_user
                %li= link_to "Settings", edit_user_path(current_user)
                %li.divider
                %li
                  = link_to "Sign out", signout_path, method: "delete"

          - else
            %li= link_to "Help", help_path
            %li= link_to "Sign in", signin_path
            %li#fat-menu.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Sign Up
                %b.caret
              %ul.dropdown-menu
                %li= link_to "Students",signup_students_path
                %li= link_to "Instructors",signup_instructors_path


