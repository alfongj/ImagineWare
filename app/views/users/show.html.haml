- provide(:title, @user.first_name + @user.last_name)
.row
  %aside.span4
    %h1
      =gravatar_for @user
      =[@user.first_name, @user.last_name].reject(&:empty?).join(' ')
      -if current_user.instruc == false and current_user.admin == false
        %h2
          %p Total points 
          %p Current credit

-if current_user.instruc == false and current_user.admin == false
  %h2   All Tutorials completed
  %table{:class => "table table-striped table-bordered table-condensed"}
    %thead
      %tr
        %th Course
        %th Date completed
        %th Points awarded
