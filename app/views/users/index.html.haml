- provide(:title, 'All users')
%h2 All users
%table{:class => "table table-striped table-bordered table-condensed"}
 %thead
  %tr
   %th Avatar
   %th User id
   %th First Name
   %th Last Name
   %th Email
  %tbody
   - @users.each do |user|
    %tr
     %td= gravatar_for @user, size: 52
     %td= link_to "#{user.id}", user_path(user)
     %td= "#{user.first_name}"
     %td= "#{user.last_name}"
     %td= "#{user.email}"
