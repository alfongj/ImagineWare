- provide(:title, 'All students')
%h2 All students
%ul.students
  - @students.each do |student|
    %li
      //= gravatar_for student
      = link_to student.first_name + ' ' + student.last_name, student_submissions_path(student)
      -if current_user and current_user.admin
        | #{link_to "delete", user_path(student), :method => :delete, data: {confirm: " Are You Sure ?"}}
= will_paginate @students

