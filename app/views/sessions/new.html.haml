- provide(:title, "Sign in")
%h1 Sign in
.row
  .span6.offset3
    = form_for(:session, url: sessions_path) do |f|
      %p= f.label :email
      %p= f.text_field :email
      %p= f.label :password
      %p= f.password_field :password
      %p= f.submit "Sign in", class: "btn btn-large btn-primary"
